# OpenAI API Key - Required for agent functionality
OPENAI_API_KEY=sk-your-api-key-here

# National Rail Enquiries Token - Required for live departure board functionality
LDB_TOKEN=your-ldb-token-here

# Service Details API Key - Required for detailed service information
SERVICE_DETAILS_API_KEY=your-service-details-api-key-here

# Flask Configuration
FLASK_SECRET_KEY=generate-a-secure-random-key-here
FLASK_DEBUG=False
FLASK_HOST=0.0.0.0
FLASK_PORT=5001

# Session Management
MAX_SESSIONS=100
SESSION_TTL_HOURS=24

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_CHAT=10 per minute
RATE_LIMIT_HEALTH=60 per minute
RATE_LIMIT_DEFAULT=100 per hour

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# Input Validation
MAX_MESSAGE_LENGTH=5000
MIN_MESSAGE_LENGTH=1

# Disruptions REST API (RDG) - Optional, required for station messages
# Base URL defaults to https://api1.raildeliverygroup.com
# Provide an API key via one of the following vars (checked in order):
#   DISRUPTIONS_API_KEY or RDG_API_KEY
DISRUPTIONS_BASE_URL=https://api1.raildeliverygroup.com
# DISRUPTIONS_API_KEY=your-rdg-disruptions-api-key
# RDG_API_KEY=your-rdg-api-key
